<body>
    <div id="form-container">
        <h2 id="prompt-text">Enter Password</h2>

        <!-- Password input box -->
        <div id="password-box">
            <input type="text" id="password" placeholder="Enter Password" required>
            <button onclick="checkPassword()">Submit</button>
        </div>

        <div id="response"></div>

        <!-- Box that appears after correct password -->
        <div id="new-box">
            <h3>Password Correct</h3>
            <p>dicekeeper1@gmail.com</p>
        </div>
    </div>

    <script>
        // Function to check the entered password
        function checkPassword() {
            const password = document.getElementById('password').value;
            const correctPassword = "lost751";  // Updated password

            // Check if password is correct
            if (password === correctPassword) {
                document.getElementById('response').innerText = "Password correct";
                document.getElementById('new-box').style.display = "block"; // Show the email
            } else {
                document.getElementById('response').innerText = "Wrong password, please try again.";
            }
        }
    </script>
